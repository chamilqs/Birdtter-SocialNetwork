@using SocialNetwork.Core.Application.ViewModels.Post;
@model SavePostViewModel
@{
    ViewData["Title"] = "Delete post";
}

<div class="row">

    <div class="col-6 offset-3" >
        <div class="card mt-5">
            <div class="card-header bg-danger text-light">
                <h4>Are you sure you want to delete this post? This action can't be reverted.</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Post" asp-action="DeletePost">
                
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancel</a>
                
                </form>

            </div>
        </div>
    </div>

</div>

