@using SocialNetwork.Core.Application.ViewModels.User
@model LoginIdentityViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="vh-100" style="margin-top:-60px;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                @if (Model.HasError)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <p>@Model.Error</p>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }
                                <form method="post" asp-controller="UserIdentity" asp-action="Index">
                                    <h5 class="fw-normal fs-4 mb-5 pb-3 text-center" style="letter-spacing: 1px; margin-top:-50px;">Log in into your account!</h5>

                                    <div>
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input id="email" class="form-control form-control-lg" asp-for="Email">
                                        <label class="form-label" for="email">Email</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input id="password" class="form-control form-control-lg" asp-for="Password">
                                        <label class="form-label" for="password">Password</label>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button type="submit" class="btn btn-dark btn-lg btn-block">Log in</button>
                                    </div>

                                    <p class="mb-2 pb-lg-2" style="color: #393f81;">
                                        Don't have an account yet? <a asp-controller="UserIdentity" asp-action="Register"
                                                                  style="color: #393f81;">Sign up here!</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        <a asp-controller="UserIdentity" asp-action="ForgotPassword"
                                                                  style="color: #393f81;">Forgot my password...</a>
                                    </p>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
